<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"> <!-- Define el color de fondo -->

    <!-- ImageView para mostrar una imagen o animación en la pantalla de inicio -->


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="418dp"
        android:layout_height="311dp"
        android:layout_marginTop="288dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Menu"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="4dp" />

    <!-- Opcional: Añade otros elementos UI si es necesario, como textos o logos -->

</androidx.constraintlayout.widget.ConstraintLayout>


